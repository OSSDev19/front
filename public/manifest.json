{
    "manifest_version": 3,
    "name": "AI 기반 의료·약품 정보 검증",
    "version": "1.0",
    "description": "드래그한 텍스트의 의료 및 약품 정보를 검증합니다.",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["popup.css"]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["popup.css"],
            "matches": ["<all_urls>"]
        }
    ]
}
